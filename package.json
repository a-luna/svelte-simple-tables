{
	"name": "@a-luna/svelte-simple-tables",
	"version": "0.0.8",
	"license": "MIT",
	"description": "Accessible, sortable, paginated table component",
	"author": "Aaron Luna (https://github.com/a-luna)",
	"repository": {
		"type": "git",
		"url": "https://github.com/a-luna/svelte-simple-tables.git"
	},
	"homepage": "https://github.com/a-luna/svelte-simple-tables",
	"bugs": "https://github.com/a-luna/svelte-simple-tables/issues",
	"keywords": [
		"svelte",
		"svelte component",
		"table component",
		"sortable table",
		"paginated table",
		"accessibility"
	],
	"main": "./index.js",
	"svelte": "./index.js",
	"types": "./index.d.ts",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev": "svelte-kit dev --host",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"test": "jest --coverage",
		"test:watch": "npm run test -- --watch",
		"package": "svelte-kit package"
	},
	"devDependencies": {
		"@babel/core": "^7.16.0",
		"@babel/preset-env": "^7.16.4",
		"@babel/preset-typescript": "^7.16.0",
		"@leveluptuts/svelte-toy": "^0.0.15",
		"@sveltejs/kit": "next",
		"@sveltejs/vite-plugin-svelte": "^1.0.0-next.31",
		"@testing-library/jest-dom": "^5.16.1",
		"@testing-library/svelte": "^3.0.3",
		"@tsconfig/svelte": "^2.0.1",
		"@types/jest": "^27.0.3",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"autoprefixer": "^10.4.0",
		"babel-jest": "^27.4.4",
		"cssnano": "^5.0.12",
		"cypress": "^9.1.1",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-svelte3": "^3.2.1",
		"jest": "^27.4.4",
		"postcss": "^8.4.4",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.5.1",
		"resize-observer-polyfill": "^1.5.1",
		"svelte": "^3.44.2",
		"svelte-check": "^2.2.10",
		"svelte-jester": "^2.1.5",
		"svelte-loader": "^3.1.2",
		"svelte-preprocess": "^4.9.8",
		"svelte2tsx": "^0.4.11",
		"ts-jest": "^27.1.1",
		"tslib": "^2.3.1",
		"typescript": "^4.5.3",
		"vite": "^2.7.1",
		"window-resizeto": "^0.0.2"
	},
	"type": "module",
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"preset": "ts-jest",
		"testEnvironment": "jsdom",
		"collectCoverage": true,
		"coverageDirectory": "coverage",
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/src/lib/__tests__/data/",
			"/src/lib/__tests__/setup/",
			"/src/lib/__tests__/types/"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/src/lib/__tests__/setup/jestSetup.ts"
		],
		"bail": false,
		"verbose": true,
		"transform": {
			"^.+\\.svelte$": [
				"svelte-jester",
				{
					"preprocess": true
				}
			],
			".(ts|tsx)": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"svelte"
		],
		"moduleNameMapper": {
			"^\\$lib(.*)$": "<rootDir>/src/lib$1",
			"^\\$app(.*)$": [
				"<rootDir>/.svelte-kit/dev/runtime/app$1",
				"<rootDir>/.svelte-kit/build/runtime/app$1"
			]
		}
	},
	"exports": {
		"./package.json": "./package.json",
		"./components/DataTable/ColumnHeader.svelte": "./components/DataTable/ColumnHeader.svelte",
		"./components/DataTable/DataTable.svelte": "./components/DataTable/DataTable.svelte",
		"./components/DataTable/TableCell.svelte": "./components/DataTable/TableCell.svelte",
		"./components/DataTable/TableHeader.svelte": "./components/DataTable/TableHeader.svelte",
		"./components/Icons/SettingsIcon.svelte": "./components/Icons/SettingsIcon.svelte",
		"./components/Icons/SortAscending.svelte": "./components/Icons/SortAscending.svelte",
		"./components/Icons/SortDescending.svelte": "./components/Icons/SortDescending.svelte",
		"./components/Icons/SvgIcon.svelte": "./components/Icons/SvgIcon.svelte",
		"./components/Pagination/Button.svelte": "./components/Pagination/Button.svelte",
		"./components/Pagination/PageNavigation.svelte": "./components/Pagination/PageNavigation.svelte",
		"./components/Pagination/PageNavigationCompact.svelte": "./components/Pagination/PageNavigationCompact.svelte",
		"./components/Pagination/PageRangeDescription.svelte": "./components/Pagination/PageRangeDescription.svelte",
		"./components/Pagination/PageSizeSetting.svelte": "./components/Pagination/PageSizeSetting.svelte",
		"./components/Pagination/Pagination.svelte": "./components/Pagination/Pagination.svelte",
		"./components/SimpleTable.svelte": "./components/SimpleTable.svelte",
		".": "./index.js",
		"./stores/pageWidth": "./stores/pageWidth.js",
		"./stores/pagination": "./stores/pagination.js",
		"./stores/tableState": "./stores/tableState.js",
		"./types/AriaAttributes": "./types/AriaAttributes.js",
		"./types/BreakPoint": "./types/BreakPoint.js",
		"./types/PageWidthState": "./types/PageWidthState.js",
		"./types/ColumnSettings": "./types/ColumnSettings.js",
		"./types/PaginationSettings": "./types/PaginationSettings.js",
		"./types/PaginationStore": "./types/PaginationStore.js",
		"./types/SimpleTable": "./types/SimpleTable.js",
		"./types/TableSettings": "./types/TableSettings.js",
		"./types/TableState": "./types/TableState.js",
		"./types/TableStateStore": "./types/TableStateStore.js",
		"./types": "./types/index.js",
		"./util": "./util.js"
	}
}
